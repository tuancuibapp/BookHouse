@{ 
    ViewBag.Background = "../Models/Images/background.jpg";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
</head>
<body style="font-family:Arial">
    <style>
        body {
            background: url("@ViewBag.Background") no-repeat fixed 100%;
            background-size: cover;
        }
        #top{
            width: 100%;
            height: 50px;
        }
        #menu {
            width: 100%;
            position: absolute;
            @*height: 50px;*@
            background-color: darkgreen;
            left: 0px;
        }
        #middle {
            width: 100%;
            height:100px;
            margin-top: 50px; @*tìm cách ghi khác*@
        }
        #left {
            width: 100px;
            float: left;
            margin: 0px;
        }
        #content {
            width: calc(100% - 208px);
            float: left;
            margin: 0px;
            background-color: white;
        }
        #right {
            width: 100px;
            float: right;
            margin: 0px;
        }
        #bottom {
            width: 100%;
            height: 40px;
            color: white;
            position:relative;
            left: 0px;
            bottom: 0px;
            text-align: center;
        }
        .clear {
            clear: both;
        }
        ul {
            margin: 0;
            padding: 0;
            list-style: none;
        }
            ul li{
                float: left;
                width: 210px;@**@
                height: 40px;
                line-height: 40px;
                text-align: center;
                font-size: 20px;
            }
                ul li a {
                    text-decoration: none;
                    color: white;
                    display: block;
                    background-color: darkgreen;
                }
                    ul li a:hover {
                        background-color: lightsalmon;
                    }
                ul li ul li {
                    display: none;
                }
                ul li:hover ul li {
                    display: block;
                }

        .search-box {
            position: absolute;
            margin-left: 20px;
            background: burlywood;
            height: 40px;
            border-radius: 40px;
        }

        .search-btn {
            float: right;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .search-txt {
            border: none;
            background: none;
            outline: none;
            float: left;
            padding: 0px;
            color: white;
            font-size: 16px;
            transition: 0.4s;
            line-height: 40px;
            width: 0px;
        }

        .search-box:hover .search-txt {
            width: 260px;
            padding: 0 6px;
        }
    
    </style>
    <div id="top">
        This is the place to insert the banner
    </div>
    <div id="menu">
        <ul>
            <li>
                <a href="#">Danh mục sách</a>
                <ul>
                    <li><a href="#">Tiểu thuyết</a></li>
                    <li><a href="#">Truyện ngắn</a></li>
                    <li><a href="#">Thơ</a></li>
                    <li><a href="#">Trinh thám</a></li>
                    <li><a href="#">Truyện tranh</a></li>
                    <li><a href="#">Lịch sử</a></li>
                    <li><a href="#">Triết học</a></li>
                    <li><a href="#">Kinh tế</a></li>
                    <li><a href="#">Tâm lý học</a></li>
                    <li><a href="#">Tham khảo</a></li>
                    <li><a href="#">Viễn tưởng</a></li>
                </ul>
            </li>
            <li><a href="#">Best Seller</a></li>
            <li><a href="#">Sách mới về</a></li>
            <li><a href="#">Sách phổ biến</a></li>
            <li>
                <div class="search-box">
                    <input class="search-txt" type="text" name="" placeholder="Type of search" />
                    <a class="search-btn" href="#">
                        <i class="fas fa-search"></i>
                    </a>
                </div>
            </li>
            <li></li>
        </ul>
    </div>
    <div id="middle" >
        <div id="left">.</div>
        <div id="content">
            @RenderBody()
        </div>
        <div id="right">.</div>
        <div class="clear"></div>
    </div>
    <div id="bottom">
        @DateTime.Now.Year - Bản quyền thuộc về HKTT Team - bookhouse.com <br />
        Địa chỉ: 227 Nguyễn Văn Cừ, Phường 4, Quận 5, TPHCM <br/>
        Giấy đăng ký số 0000000000 do APCS Hồ Chí Minh cấp ngày 1/1/2001 sửa đổi lần 0 vào ngày 1/1/2001
    </div>
</body>
</html>